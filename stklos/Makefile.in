PACKAGE=@PACKAGE@
SO=@SO@

all: build copy

build:
	(cd src; $(MAKE))

copy: 
	cp src/$(PACKAGE).$(SO) ../..

install: 

clean: 
	(cd src; $(MAKE) clean)
	rm -f ../../$(PACKAGE).$(SO) *~

distclean: clean
	(cd src; $(MAKE) distclean)
	/bin/rm -rf config.log config.status autom4te.cache Makefile

